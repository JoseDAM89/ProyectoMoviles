<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Directriz vertical para dividir la pantalla en tres columnas -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintGuide_percent="0.33"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintGuide_percent="0.66"
        android:orientation="vertical" />

    <!-- Directriz horizontal para centrar los TextView -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal" />

    <!-- TextView para el eje X -->

    <!-- TextView para el eje Y -->

    <!-- TextView para el eje Z -->

    <TextView
        android:id="@+id/textViewX"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:text="X Axis"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textViewY"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:text="Y Axis"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/textViewZ"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:text="Z Axis"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="91dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
