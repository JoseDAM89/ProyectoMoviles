<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:maxLength="50"
        android:text="Número de accesos a la App: 0"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:layout_width="366dp"
        android:layout_height="631dp"
        android:layout_margin="15dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- Botones dentro del GridLayout -->
        <!-- Aplicar estilo personalizado a cada botón -->
        <Button
            android:id="@+id/buttonInternet"
            style="@style/CustomButtonStyle"
            android:drawableTop="@android:drawable/ic_menu_search"
            android:text="Internet" />

        <Button
            android:id="@+id/buttonSensores"
            style="@style/CustomButtonStyle"
            android:drawableTop="@android:drawable/ic_notification_overlay"
            android:text="Sensores" />

        <Button
            android:id="@+id/buttonCamara"
            style="@style/CustomButtonStyle"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:text="Cámara" />

        <Button
            android:id="@+id/buttonGaleria"
            style="@style/CustomButtonStyle"
            android:drawableTop="@android:drawable/ic_menu_gallery"
            android:text="Galería" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

