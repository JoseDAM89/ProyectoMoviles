<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Define un estilo personalizado para los botones -->
    <style name="CustomButtonStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">#2B5D13</item> <!-- Color de fondo -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color del texto -->
        <item name="android:textSize">22dp</item> <!-- Tamaño del texto -->
        <item name="android:padding">10dp</item> <!-- Padding interno -->
        <item name="android:gravity">center</item> <!-- Centra el contenido -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Tipo de letra -->
        <item name="android:textAllCaps">false</item> <!-- Evita mayúsculas automáticas -->
    </style>

</resources>