<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Define un estilo personalizado para los botones -->
    <style name="CustomButtonStyle">
        <item name="android:backgroundTint">@color/teal_200</item> <!-- Color de fondo -->
        <item name="android:textColor">@color/material_dynamic_neutral20</item> <!-- Color del texto -->
        <item name="android:textSize">22dp</item> <!-- Tamaño del texto -->
        <item name="android:gravity">center</item> <!-- Centra el contenido -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Tipo de letra -->
        <item name="android:textAllCaps">false</item> <!-- Evita mayúsculas automáticas -->
        <item name="android:padding">20dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo para las imágenes en el GridView -->
    <style name="GridImageStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>